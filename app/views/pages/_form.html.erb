<div>
  <%= form_tag dogs_path, class: "form-inline", method: :get do %>
    <%= text_field_tag :date,
      params[:date],
      class: "form-control datepicker",
        style:"color: dark-grey; opacity: 0.7;",

      placeholder: "When?"
    %>
    <%= text_field_tag :location,
      params[:date],
      class: "form-control m-3",
        style:"color: dark-grey; opacity: 0.7; background-color: white",
      placeholder: "Where?"
    %>
    <%= button_tag "Search!", class: "form-control btn btn-primary" %>
  <% end %>

</div>
